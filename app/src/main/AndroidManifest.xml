<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mdg.appdroid.foodona">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Sign In"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".SignupActivity"
            android:label="Sign Up"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mdg.appdroid.foodona.LoginActivity" />
        </activity>
        <activity
            android:name=".CharityHotelList"
            android:label="@string/title_activity_charity_hotel_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CharityHotelDescription"
            android:label="@string/title_activity_charity_hotel_description"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>